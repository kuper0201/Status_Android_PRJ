<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
>
    <TextView
            android:layout_width="265dp"
            android:layout_height="45dp" android:id="@+id/name"
            android:textAlignment="center" android:text="텍스트"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/deleteBtn"
            android:textSize="24sp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:layout_width="71dp"
            android:layout_height="43dp"
            android:id="@+id/deleteBtn"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/baseline_delete_forever_24"/>
</androidx.constraintlayout.widget.ConstraintLayout>